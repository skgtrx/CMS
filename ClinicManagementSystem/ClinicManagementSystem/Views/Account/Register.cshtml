@using ClinicManagementSystem.Models
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutOut.cshtml";
    ViewBag.Title = "Register";
}
<div>
    <div class="login_wrapper">
        <section id="loginForm" class="login_content">
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "animate form login_form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h1>Register Form</h1>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Id" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Mobile Number" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EnumDropDownListFor(m => m.Gender, "Gender", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Gender)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.DateOfBirth, "{0:MM/dd/yyyy}", new { @placeholder = "Date Of Birth (MM/DD/YYYY)", @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(m => m.DateOfBirth)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ConservatorName, new { @class = "form-control", placeholder = "Emergency Contact Name" })
                    @Html.ValidationMessageFor(m => m.ConservatorName, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ConservatorPhone, new { @class = "form-control", placeholder = "Emergency Contact Number" })
                    @Html.ValidationMessageFor(m => m.ConservatorPhone, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ConservatorRelation, new { @class = "form-control", placeholder = "Emergency Contact Relation" })
                    @Html.ValidationMessageFor(m => m.ConservatorRelation, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" id="Submit" style="margin-left:auto">Register</button>
                    <button type="button" class="btn btn-danger" id="Login">Login</button>
                </div>
                <div>
                    <p id="message"></p>
                </div>
                <div class="clearfix"></div>
                <div class="separator">
                    <div class="clearfix"></div>
                    <br />
                    <div>
                        <h1><i class="fa fa-hospital-o"></i> Clinic Managment System</h1>
                        <p>©@DateTime.Now.Year All Rights Reserved.</p>
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('.datepicker').datepicker({
            autoclose: true
        });
        $("#Login").on("click", function () {
            window.location.href = "Login";
        });
    </script>
}

