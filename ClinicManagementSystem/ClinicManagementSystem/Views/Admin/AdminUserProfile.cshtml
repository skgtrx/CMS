@using ClinicManagementSystem.Models
@using ClinicManagementSystemDOL.Enums
@model AdminProfileViewModel
@{
    ViewBag.Title = "Admin Profile";
    if (Session["userId"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
    else if ((int)Session["roleId"] != (int)ClinicManagementSystemDOL.Enums.Roles.Admin)
    {
        Response.Redirect("~/Error.htm");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Profile </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive avatar-view" src="~/Content/images/user.png" alt="Avatar" title="Change the avatar">
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12">
                    @if (Model.Admin.Gender == (int)Gender.Male)
                    {
                        <h3> Mr. @char.ToUpper(@Model.Admin.FirstName[0])@Model.Admin.FirstName.Substring(1) @char.ToUpper(@Model.Admin.LastName[0])@Model.Admin.LastName.Substring(1)</h3>
                    }
                    else
                    {
                        <h3> Ms. @char.ToUpper(@Model.Admin.FirstName[0])@Model.Admin.FirstName.Substring(1) @char.ToUpper(@Model.Admin.LastName[0])@Model.Admin.LastName.Substring(1)</h3>
                    }
                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-briefcase user-profile-icon"></i> &nbsp; Admin
                        </li>
                        <li>
                            <i class="fa fa-birthday-cake user-profile-icon"></i> &nbsp; @Model.Admin.DateOfBirth.ToShortDateString()
                        </li>
                        <li>
                            <i class="fa fa-map-marker user-profile-icon"></i> &nbsp; @Model.Admin.Address
                        </li>
                        <li>
                            <i class="fa fa-phone"></i> &nbsp; @Model.Admin.Phone
                        </li>
                        <li><i class="fa fa-inbox"></i> &nbsp; @Model.Admin.Email</li>
                    </ul>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12" style="text-align:right">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Admins","Admin")">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
